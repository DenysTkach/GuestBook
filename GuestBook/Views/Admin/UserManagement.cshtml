@model IEnumerable<GuestBook.Models.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Admin - User Management";
}

<div class="container mt-4">
    <h1 class="mb-4">User Management</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="CreateUser" class="btn btn-primary">Add New User</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                @foreach (var role in user.Roles)
                                {
                                    <span class="badge @(role == "Administrator" ? "bg-danger" : role == "Employee" ? "bg-primary" : "bg-secondary")">@role</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                                
                                @if (!user.Roles.Contains("Administrator"))
                                {
                                    @if (!user.Roles.Contains("Employee"))
                                    {
                                        <form asp-action="AssignEmployeeRole" method="post" style="display: inline;">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-sm btn-success">Assign Employee</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="RemoveEmployeeRole" method="post" style="display: inline;">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-sm btn-warning">Remove Employee</button>
                                        </form>
                                    }
                                    
                                    <form asp-action="DeleteUser" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No users found.</p>
    }
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to Messages</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to GuestBook</a>
    </div>
</div>
