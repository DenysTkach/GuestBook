@model IEnumerable<GuestBook.Models.GuestBookMessage>
@{
    ViewData["Title"] = "Admin - Manage Messages";
}

<div class="container mt-4">
    <h1 class="mb-4">Admin - Manage GuestBook Messages</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Message</th>
                        <th>Category</th>
                        <th>User</th>
                        <th>Created At</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model)
                    {
                        <tr>
                            <td>@message.Name</td>
                            <td>@message.Message</td>
                            <td>
                                @if (message.Category != null)
                                {
                                    <span class="badge bg-info">@message.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (message.User != null)
                                {
                                    <span>@message.User.FirstName @message.User.LastName</span>
                                }
                                else
                                {
                                    <span class="text-muted">Anonymous</span>
                                }
                            </td>
                            <td>@message.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</td>
                            <td>
                                @if (message.IsApproved)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                            <td>
                                @if (!message.IsApproved)
                                {
                                    <form asp-action="Approve" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@message.Id" />
                                        <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                    </form>
                                }
                                @if (message.IsApproved)
                                {
                                    <a asp-action="Edit" asp-route-id="@message.Id" class="btn btn-sm btn-primary">Edit</a>
                                }
                                <form asp-action="Delete" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@message.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this message?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No messages yet.</p>
    }
    
    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to GuestBook</a>
    </div>
</div>
