@model IEnumerable<GuestBook.Models.GuestBookMessage>
@{
    ViewData["Title"] = "Employee - Manage Replies";
}

<div class="container mt-4">
    <h1 class="mb-4">Employee - Manage Message Replies</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Message</th>
                        <th>Category</th>
                        <th>Created At</th>
                        <th>Reply Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model)
                    {
                        <tr>
                            <td>@message.Name</td>
                            <td>@message.Message</td>
                            <td>
                                @if (message.Category != null)
                                {
                                    <span class="badge bg-info">@message.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@message.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(message.Reply))
                                {
                                    <span class="badge bg-success">Replied</span>
                                    <br />
                                    <small class="text-muted">
                                        @if (message.RepliedByUser != null)
                                        {
                                            @:by @message.RepliedByUser.FirstName @message.RepliedByUser.LastName
                                        }
                                        @if (message.RepliedAt.HasValue)
                                        {
                                            @:on @message.RepliedAt.Value.ToString("MMM dd, yyyy")
                                        }
                                    </small>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">No Reply</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Reply" asp-route-id="@message.Id" class="btn btn-sm btn-primary">
                                    @(string.IsNullOrEmpty(message.Reply) ? "Add Reply" : "Edit Reply")
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No approved messages to reply to.</p>
    }
    
    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to GuestBook</a>
    </div>
</div>
